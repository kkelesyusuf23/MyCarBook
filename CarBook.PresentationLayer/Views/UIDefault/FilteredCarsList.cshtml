@model List<CarBook.EntityLayer.Concrete.Car>

@{
    ViewData["Title"] = "FilteredCarsList";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay innerpage" style="background-image: url('/carrent-master/images/hero_2.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Filtrelenmiş Araçlar</h1>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="item-1">
                            <a href="#"><img src="@item.ImageURL" alt="Image" class="img-fluid"></a>
                            <div class="item-1-contents">
                                <div class="text-center">
                                    <h3><a href="#">@item.Brand.BrandName @item.Model</a></h3>
                                    <div class="rating">
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                    </div>
                                    <div class="rent-price"><span>@item.DailyPrice₺/</span>günlük</div>
                                </div>
                                <ul class="specs">
                                    <li>
                                        <span>Model Yılı</span>
                                        <span class="spec">@item.Year</span>
                                    </li>
                                    <li>
                                        <span>Kişi Sayısı</span>
                                        <span class="spec">@item.PersonCount</span>
                                    </li>
                                    <li>
                                        <span>Vites Türü</span>
                                        <span class="spec">@item.GearType</span>
                                    </li>
                                    <li>
                                        <span>Km</span>
                                        <span class="spec">@item.km</span>
                                    </li>
                                </ul>
                                <div class="d-flex action">
                                    <a href="/UICar/CarRant/@item.CarID" class="btn btn-primary">Hemen Kirala</a>
                                    <a href="/Car/CarDetail/@item.CarID" class="btn btn-warning" style="margin-left:1.2rem">Araç Detayları</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Aradığınız kriterde araç bulunmamaktadır.</p>
            }

        </div>
    </div>
</div>