﻿
@{
    ViewData["Title"] = "CarRant";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div style="background-color: black; height: 100px"></div>

<div class="row" style="margin-top:25px">
    <!-- Left Section: Car Image -->
    <div class="col-md-4" style="text-align:center">
        <!-- Add your car image here -->
        <img src="@ViewBag.ImageUrl" alt="Car Image" class="img-fluid">
    </div>

    <!-- Middle Section: Car Details -->
    <div class="col-md-4" style="border-right: solid black; border-left: solid black; margin-bottom: 20px;">
        <h4>Car Details</h4>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="brand" class="form-label">Brand</label>
                <input type="text" class="form-control" id="brand" name="brand" value="@ViewBag.Brand" readonly>
            </div>
            <div class="col-md-6">
                <label for="model" class="form-label">Model</label>
                <input type="text" class="form-control" id="model" name="model" value="@ViewBag.Model" readonly>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="gearType" class="form-label">Gear Type</label>
                <input type="text" class="form-control" id="gearType" name="gearType" value="@ViewBag.GearType" readonly>
            </div>
            <div class="col-md-6">
                <label for="year" class="form-label">Year</label>
                <input type="text" class="form-control" id="year" name="year" value="@ViewBag.Year" readonly>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="carCategory" class="form-label">Car Category</label>
                <input type="text" class="form-control" id="carCategory" name="carCategory" value="@ViewBag.CarCategory" readonly>
            </div>
            <div class="col-md-6">
                <label for="km" class="form-label">KM</label>
                <input type="text" class="form-control" id="km" name="km" value="@ViewBag.KM" readonly>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="personCount" class="form-label">Person Count</label>
                <input type="text" class="form-control" id="personCount" name="personCount" value="@ViewBag.PersonCount" readonly>
            </div>
            <div class="col-md-6">
                <label for="DailyPrice" class="form-label">Daily Price</label>
                <input type="text" class="form-control" id="DailyPrice" name="DailyPrice" value="@ViewBag.DailyPrice" readonly>
            </div>
        </div>
    </div>

    <!-- Right Section: Rental Form -->
    <div class="col-md-4">
        <h4>Rental Form</h4>
        <form method="post" asp-controller="UICar" asp-action="CarRant">
            <input type="hidden" name="CarID" />
            <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="FullName" required>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" required>
            </div>

            <div class="mb-3 row">
                <div class="col-md-6">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" required>
                </div>

                <div class="col-md-6">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="height: 45px; margin-top: 40px;">Kirala</button>
        </form>
    </div>

</div>